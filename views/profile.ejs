<%- include("./partials/head.ejs") %>
<%- include("./partials/headerLogueado.ejs") %>

<body>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src=<%= Foto.foto %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= Nombre.usuario %>
						<a href="profile-edit.html">  <!-- no hicimos profile edit -->
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="info-del-usuario">
						<li> <%= Email.email %> </li>
						<li> <%= productos_encontrados.length %></li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < 10; i++ ) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<figure class="product-box_image">
							<img src=<%= Imagen[i].imagen %> alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= Producto.detalles[i].nombre %></h2>
							<p><%= Texto[i].descripcion %></p>
							<p>Comentarios: 12</p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


<%- include("./partials/footer.ejs") %>

</body>	
</html